# Base de données (SQLite pour dev, PostgreSQL pour prod)
DATABASE_URL=sqlite:///./invoices.db

# Brevo (ex-Sendinblue) - API Key v3
# Obtenir une clé: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=xkeysib-votre-cle-api

# Expéditeur des emails
SENDER_EMAIL=facturation@votredomaine.com
SENDER_NAME=Service Facturation

# Clé API pour sécuriser les endpoints (optionnel)
API_KEY=

# Timezone pour le scheduler
TIMEZONE=Europe/Paris

# Heure d'envoi des relances (format 24h)
SCHEDULER_HOUR=9
SCHEDULER_MINUTE=0
